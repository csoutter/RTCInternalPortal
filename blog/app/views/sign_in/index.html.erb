<body class="sign_in jumbotron">
    <div class="sign_in_container">
        <div class="sign_in_pic">
            <%= image_tag("RTCLogoSlash.jpg", alt: "RTC Logo", width: "150", height:"150") %>
        </div>
        <div class="sign_in_text">
            <h1>Welcome to the Rewriting the Code Internal Portal</h1>
        </div>
        <div class="clearfix"></div>
        </br>
        <h5>Please sign in below</h5>
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">Please use the email you used to apply for RTC.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">2-Step Authentication</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Generated Password">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="NDACheck">
                <label class="form-check-label" for="NDACheck">I agree not to share any information on this site outside of RTC.</label>
            </div>
            </br>
            <button type="submit" class="btn btn-primary log_in">Log in</button>
        </form>
        </br>
        <p>For questions please contact <a href="">help@rewritingthecode.org</a></p>
    </div>
</body>

<script>
    document.getElementById("NDACheck").required = true;
</script>
